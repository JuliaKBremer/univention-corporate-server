.umc .umcModuleHeader
	width: 100%

	.umcModuleHeaderWrapper
		margin: auto

	.umcModuleHeaderOuterContainer
		background: inherit
		width: 100%
		padding-top: 25px
		padding-bottom: @padding-top
		@media (max-width: 400px)
			padding-top: 15px
			padding-bottom: 20px

		transition: font-size 0.2s, padding-bottom 0.2s

	.umcModuleHeaderLeft
		float: left
		max-width: 80%

	.umcModuleHeaderRight
		float: right
		padding-top: 3px
