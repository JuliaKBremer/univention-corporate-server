.umc .umcModuleTitle
	font-size: $font-size-headline
	color: $text-color
	font-weight: normal
	line-height: 1em
	padding: 18px 0

.umc .umcModule
	background-color: $document-background-color

	.umcModuleWrapper
		margin: 0 auto
		padding: 0

		.umcModuleContent .umcModuleContentChildWrapper.dijitHidden
			display: none !important

.umc .umcPageHelpText
	margin-bottom: 1.5em

.umc .umcPageHeader h1
	font-size: $font-size-title
	font-weight: 500

.umc .umcPageNav
	margin-bottom: 2.5em

	.positionText
		margin: 1em 0
		font-size: $font-size-caption
		color: rgba(40, 40, 40, 0.54)

.umc .umcPageNav .umcPageHeader:first-child h1
	margin-top: 0

.umc .dijitDialogPaneContent .umcButtonRow:last-child,
.umc .umcPageFooter
	margin-top: 0.75em
	clear: both
