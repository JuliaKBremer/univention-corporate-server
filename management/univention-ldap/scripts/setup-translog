set -e -u

case "$(dpkg --print-architecture)" in
i386) db="id2entry.bdb" ;;
amd64|*) db="data.mdb" ;;
esac
[ -f "/var/lib/univention-ldap/translog/$db" ] ||
    slapadd -b cn=translog -l /usr/share/univention-ldap/translog.ldif
:
